@{
    ViewData["Title"] = "Popüler Kullanıcılar";
    var liste = ViewBag.PopulerList as List<dynamic>;
}

<div class="container mt-4">
    <div class="bg-white dark-mode-bg p-4 rounded shadow-sm">
        <h2 class="text-danger text-center mb-4">
            <i class="bi bi-star-fill"></i> En Popüler 10 Kullanıcı
        </h2>

        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
                    <th>Takipçi Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @if (liste != null && liste.Any())
                {
                    int i = 1;
                    foreach (var item in liste)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Kullanici</td>
                            <td>@item.TakipciSayisi</td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-muted">Veri bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <a href="/Home/Index" class="btn btn-outline-primary">
                <i class="bi bi-house-door-fill"></i> Ana Sayfa
            </a>
        </div>
    </div>
</div>
